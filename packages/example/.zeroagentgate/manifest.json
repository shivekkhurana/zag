{
  "version": "v0",
  "name": "Todo Service",
  "description": "A simple todo management service",
  "register": "/api/auth/register",
  "actions": [
    {
      "id": "list-todos",
      "method": "GET",
      "path": "/api/todos",
      "description": "List all todos"
    },
    {
      "id": "create-todo",
      "method": "POST",
      "path": "/api/todos",
      "description": "Create a new todo",
      "params": [
        {
          "name": "title",
          "type": "string",
          "required": true,
          "description": "The title of the todo"
        }
      ]
    },
    {
      "id": "delete-todo",
      "method": "DELETE",
      "path": "/api/todos/:id",
      "description": "Delete a todo by ID",
      "params": [
        {
          "name": "id",
          "type": "string",
          "required": true,
          "description": "The ID of the todo to delete"
        }
      ]
    }
  ]
}
